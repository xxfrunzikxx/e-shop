<p id="notice"><%= notice %></p>
<h1>Products</h1>
<% @products.each do |product| %>
<div class="entry">
  <%=image_tag(product.image_url) %>
  <h4><%= product.name %></h4>
  <p><%= number_to_currency(product.price) %></p>
  <%= link_to 'ololo', line_items_path(product_id: product), remote: true, method: :post %>
  <%= button_to 'Add to Cart', line_items_path(product_id: product), remote: true, form: { 'data-type' => 'script' } %>
</div>
<%end%>
